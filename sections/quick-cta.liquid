{% schema %}
{
  "name": "Quick CTA",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "#ffffff"
    },
    {
      "type": "richtext",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "<h2>Headline</h2><p>Test Text</p>"
    },
    {
      "type": "image_picker",
      "id": "cta_image",
      "label": "CTA Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Click me"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "UR Quick CTA",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% javascript %}
  // Any JavaScript specific to this section can go here.
{% endjavascript %}

<div class='quick-cta color-{{ section.settings.color_scheme }}'>
  <div class='quick-cta__content page-width'>
    <div class='xrounded-3xl xflex xgap-4 xp-16' style='background-color: {{ section.settings.background_color }};'>
      {% if section.settings.cta_image != blank %}
        <img
          src='{{ section.settings.cta_image | img_url: '300x300' }}'
          alt=''
          width='200'
          height='200'
          class='quick-cta__image'
          loading='lazy'
        >
      {% endif %}
      <div>
        <div class='xp-8'>{{ section.settings.cta_text }}</div>
        {% if section.settings.button_text != blank %}
          <a href='{{ section.settings.button_url }}' class='button'>{{ section.settings.button_text }}</a>
        {% endif %}
      </div>
    </div>
  </div>
</div>
