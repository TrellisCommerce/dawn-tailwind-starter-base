{% schema %}
{
  "name": "Quick CTA",
  "settings": [
    {
      "type": "select",
      "label": "Text Color",
      "id": "text_color",
      "options": [
        {
          "value": "dark",
          "label": "Dark"
        },
        {
          "value": "beige",
          "label": "Light"
        }
      ]
    },
    {
      "type": "select",
      "label": "Background Color",
      "id": "background_color",
      "options": [
        {
          "value": "red",
          "label": "UR Red"
        },
        {
          "value": "green",
          "label": "UR Green"
        },
        {
          "value": "purple",
          "label": "UR Purple"
        },
        {
          "value": "orange",
          "label": "UR Orange"
        }
      ]
    },
    {
      "type": "richtext",
      "id": "cta_text",
      "label": "CTA Text",
      "default": "<h2>Headline</h2><p>Test Text</p>"
    },
    {
      "type": "image_picker",
      "id": "cta_image",
      "label": "CTA Image"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "Click me"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button URL"
    }
  ],
  "presets": [
    {
      "name": "UR Quick CTA",
      "category": "Custom"
    }
  ]
}
{% endschema %}

{% javascript %}
  // Any JavaScript specific to this section can go here.
{% endjavascript %}

<div class='quick-cta '>
  <div class='quick-cta__content page-width'>
    <div class='xrounded-3xl xflex xflex-col md:xflex-row xgap-4 xp-16  xmy-8 xbg-{{ section.settings.background_color }}'>
      {% if section.settings.cta_image != blank %}
        <img
          src='{{ section.settings.cta_image | img_url: '300x300' }}'
          alt=''
          width='150'
          height='150'
          class='quick-cta__image xrounded-3xl'
          loading='lazy'
        >
      {% endif %}
      <div class='xflex xjustify-between xflex-wrap xw-full '>
        <div class='richtext xp-8 {{ section.settings.text_color }}'>{{ section.settings.cta_text }}</div>
        {% if section.settings.button_text != blank %}
          <div class='xflex xitems-end'>
            <a href='{{ section.settings.button_url }}' class='button {{ section.settings.text_color }}'>
              {{- section.settings.button_text -}}
            </a>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

<div class='xbg-red xbg-purple xbg-green xbg-orange hidden'></div>
