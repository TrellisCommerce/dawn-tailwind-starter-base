<style type="text/scss">
  .error-figure {
    padding-bottom: 100vw;
    height: 0;
    
    position: relative;
    width: 100%;
    img {
      @apply absolute top-0 left-0 w-full h-full object-cover;
    }
    @include at-query ($min, $medium) {
      padding-bottom: 40%;
    }
  }
</style>

<div class="">
  <div class="twcss-flex twcss-flex-col md:twcss-flex-row twcss-relative">
    <figure class="twcss-error-figure">
      <img src="{{ section.settings.image_1 }}" width="" height="" alt="404 Left Image">
    </figure>
    <figure class=" twcss-error-figure">
      <img src="{{ section.settings.image_2 }}" width="" height="" alt="404 Right Image">
    </figure>
    <div class="twcss-absolute-center-v-h twcss-text-ll-new-gray twcss-note twcss-tex-gyre twcss-max-w-[282px] twcss-text-center">
      <p>{{ section.settings.title_404 }}</p>
      <p>{{ section.settings.body_404 }}</p>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "404 Page",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Left Image"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Right Image"
    },
    {
      "type": "text",
      "id": "title_404",
      "label": "404 Title",
      "default": "404"
    },
    {
      "type": "text",
      "id": "body_404",
      "label": "404 Body Type",
      "default": "The page you are looking for either doesnâ€™t exist or has moved or something else has happened."
    }
  ],
  "presets": [
    {
      "name": "404 Settings",
      "category": "Pages"
    }
  ]
}
{% endschema %}
