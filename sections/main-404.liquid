<style type="text/css">
  .error-page {
    {% comment %} position: absolute; {% endcomment %}
    top: 0;
    left: 0;
    width: 100%;
    {% comment %} min-height: 100vh; {% endcomment %}
    {% comment %} height: 100%; {% endcomment %}
  }
  @media (max-width: 749px) {
    .error-page {
      {% comment %} height: calc(100dvh - 156px); {% endcomment %}
      height: 100dvh;
      margin-top: -142px;
    }
  }
  @media (min-width: 750px) {
    .error-page {
      {% comment %} height: calc(100dvh - 156px); {% endcomment %}
      height: 100vh;
      margin-top: -154px;
    }
  }
  .error-flex{
    height: 100%;

  }
  
  .error-figure {
    {% comment %} padding-bottom: 100vw; {% endcomment %}
    height: 100%;
    position: relative;
    width: 100%;
  }

  .error-figure img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Responsive adjustments */
  {% comment %} @media (min-width: 768px) {
    .error-figure {
      {% comment %} padding-bottom: 40%; {% endcomment %}
    }
  } {% endcomment %}
</style>
<div class="error-page  twcss-relative md:twcss-top-0 -!twcss-top-16">
  <div class="twcss-flex twcss-flex-col md:twcss-flex-row twcss-relative error-flex">
    <figure class="error-figure">
      <img src="{{ section.settings.image_1 | image_url }}" 
        width="{{ section.settings.image_1.width }}" 
        height="{{ section.settings.image_1.height }}" 
        alt="{{ section.settings.image_1.alt }}"
        class="twcss-w-full twcss-h-auto"
      >
        
    </figure>

    <figure class="error-figure">
      <img src="{{ section.settings.image_2 | image_url }}" 
        width="{{ section.settings.image_2.width }}" 
        height="{{ section.settings.image_2.height }}" 
        alt="{{ section.settings.image_2.alt }}"
        class="twcss-w-full twcss-h-auto">
    </figure>

    <div class="absolute-center-v-h twcss-inset-0 twcss-flex twcss-items-center twcss-justify-center twcss-text-center twcss-text-ll-new-gray note texGyre twcss-max-w-[282px]">
      <div>
        <p>{{ section.settings.title_404 }}</p>
        <p>{{ section.settings.body_404 }}</p>
      </div>
    </div>
  </div>
</div>


{% schema %}
{
  "name": "404 Page",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Left Image"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Right Image"
    },
    {
      "type": "text",
      "id": "title_404",
      "label": "404 Title",
      "default": "404"
    },
    {
      "type": "text",
      "id": "body_404",
      "label": "404 Body Type",
      "default": "The page you are looking for either doesnâ€™t exist or has moved or something else has happened."
    }
  ],
  "presets": [
    {
      "name": "404 Settings",
      "category": "Pages"
    }
  ]
}
{% endschema %}
