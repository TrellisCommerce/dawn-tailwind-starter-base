{% schema %}
{
  "name": "Fullwidth Banner",
  "settings": [
    {
      "type": "image_picker",
      "label": "Background Image",
      "id": "background_image"
    },
    {
      "type": "richtext",
      "label": "Content",
      "id": "content",
      "default": "<p>Test Text</p>"
    },
    {
      "type": "text",
      "label": "Button Text",
      "id": "button_text",
      "default": "Button Text"
    },
    {
      "type": "url",
      "label": "Button Link",
      "id": "button_link"
    },
    {
      "type": "text",
      "label": "Button2 Text",
      "id": "button2_text",
      "default": "Button Text"
    },
    {
      "type": "url",
      "label": "Button2 Link",
      "id": "button2_link"
    },
    {
      "type": "select",
      "id": "newsletter",
      "label": "Show Newsletter Subscription Form",
      "options": [
        {
          "value": "true",
          "label": "Yes"
        },
        {
          "value": "false",
          "label": "No"
        }
      ],
      "default": "false"
    },
    {
      "type": "select",
      "id": "theme_mode",
      "label": "Select Theme Mode",
      "options": [
        {
          "value": "dark",
          "label": "Dark"
        },
        {
          "value": "light",
          "label": "Light"
        }
      ],
      "default": "light"
    }
  ],
  "presets": [
    {
      "name": "UR Fullwidth Banner",
      "category": "Custom"
    }
  ]
}
{% endschema %}
